<div class="row">
  <div class="col-md-12">
    <h2>Add New Lot</h2>
  </div>
  <div class="col-md-12">
    {{#if isAddingNewLot}}
      <form>
        <div class="form-group">
          <label for="title">Title</label>
          {{input id="title" class="form-control" value=title}}
        </div>
        <div class="form-group">
          <label for="description">Description</label>
          {{textarea id="description" class="form-control" value=description rows="3"}}
        </div>
        <div class="form-group">
          <label for="owner">Owner</label>
          {{input id="owner" class="form-control" value=owner}}
        </div>

        <button class="btn btn-danger" {{action 'save'}}><i class="fa fa-floppy-o fa-2x"></i></button>
      </form>
    {{else}}
      <button class="btn btn-danger" {{action 'addNewLot'}}>Add New Lot</button>
    {{/if}}
  </div>
</div>

<br>

<div class='row'>
  <div class="col-md-12">
    <h4>Please choose a lot below to view items</h4>
  </div>
  <div class="col-md-12">
    {{#each}}
      <div class="col-md-4 no-padding-div">
        <div class="lot well">
          <div class='col-md-3'>
             pic here! <!-- {{image}} -->
          </div>
          <div class='col-md-9'>
            <h5>{{#link-to 'lot' this.id}}{{title}}{{/link-to}}</h5>
            <p>{{description}}</p>
            <p>{{owner}}</p>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>
