<h4>New Item</h4>

<form>
  <div class="form-group">
    <label for="name">Name:</label>
    {{input value=name id="name" class="form-control"}}
  </div>
  <div class="form-group">
    <label for="description">Description:</label>
    {{input value=description id="description" class="form-control"}}
  </div>
  <div class="form-group">
    <label for="image">Image:</label>
    {{input value=image id="image" class="form-control"}}
  </div>
  <div class="form-group">
    <label for="owner">Owner:</label>
    {{input value=owner id="owner" class="form-control"}}
  </div>
  <div class="form-group">
    <label for="price">Price:</label>
    {{input value=price id="price" class="form-control"}}
  </div>
  <div class="form-group">
    <label for="premierYear">Premier Year:</label>
    {{input value=premierYear id="premierYear" class="form-control"}}
  </div>
  <div class="form-group">
    <label for="movieName">Movie Title:</label>
    {{input value=movieName id="movieName" class="form-control"}}
  </div>

  <button class="btn btn-primary" {{action 'save'}}>Add an item to your Lot</button>
</form>
